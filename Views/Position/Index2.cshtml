@model IEnumerable<CIS.HR.ViewModels.PositionViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Position.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionDescription.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionDescription.DateEffective)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Position.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionDescription.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionDescription.DateEffective)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Position.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Position.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Position.Id })
        </td>
    </tr>
}

</table>
